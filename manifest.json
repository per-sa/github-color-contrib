{
  "name": "Github Color Contrib",
  "version": "1.0.0",
  "description": "Change the color of the contributions graph on Github",
  "manifest_version": 3,
  "author": "CLMB",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Github Color Contrib"
    },
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["*://*/*" ]
}